@inject IStringLocalizer<Resource> localizer
@inject ICategory _category
<footer class="footer">
		<div class="footer-first-row">
			<div class="container">
				<div class="row">
					<div class="col-md-6 col-sm-6">
						<ul class="call-email-alt">
							<li><a href="/" class="callemail"><i class="uil uil-dialpad-alt"></i>9777-000-000</a></li>
							<li><a href="/" class="callemail"><i class="uil uil-envelope-alt"></i>info@blazorgrocery.com</a></li>
						</ul>
					</div>
					<div class="col-md-6 col-sm-6">
						<div class="social-links-footer">
							<ul>
								<li><a href="facebook.com"><i class="fab fa-facebook-f"></i></a></li>
								<li><a href="twitter.com"><i class="fab fa-twitter"></i></a></li>
								<li><a href="google.com"><i class="fab fa-google-plus-g"></i></a></li>
								<li><a href="linkedin.com"><i class="fab fa-linkedin-in"></i></a></li>
								<li><a href="instagram.com"><i class="fab fa-instagram"></i></a></li>
								<li><a href="pinterest.com"><i class="fab fa-pinterest-p"></i></a></li>
							</ul>
						</div>
					</div>				
				</div>
			</div>
		</div>
		<div class="footer-second-row">
			<div class="container">
				<div class="row">
					<div class="col-lg-3 col-md-6 col-sm-6">
						<div class="second-row-item">
							<h4> @localizer["Categories"]</h4>
							<ul>
								@foreach(var item in listCategory)
						{
								<li><a href="/shop-details/@item.CategoryId/@item.Name">@item.Name</a></li>
						}
							</ul>
						</div>
					</div>
					<div class="col-lg-3 col-md-6 col-sm-6">
						<div class="second-row-item">
							<h4> @localizer["Useful Links"]</h4>
							<ul>
								<li><a href="/"> @localizer["About"]</a></li>
								<li><a href="/productdetails/@newpro"> @localizer["New Products"]</a></li>
  <li><a href="/productdetails/@feature"> @localizer["Featured Products"]</a></li>
  <li><a href="/brand">Brand</a></li>
								<li><a href="/">@localizer["Blog"]</a></li>
								<li><a href="/">@localizer["Faq"]</a></li>
								<li><a href="/">@localizer["Careers"]</a></li>
								<li><a href="/contactus">@localizer["Contact Us"]</a></li>
							</ul>
						</div>
					</div>
					<div class="col-lg-3 col-md-6 col-sm-6">
						<div class="second-row-item">
							<h4>@localizer["Top Cities"]</h4>
							<ul>
								<li><a href="/">Kathmandu</a></li>
								<li><a href="/">Butwal</a></li>
								<li><a href="/">Chitwan</a></li>
								<li><a href="/">Nepaljung</a></li>
								<li><a href="/">Dang</a></li>
								<li><a href="/">Surkhet</a></li>
								<li><a href="/">Bhaktapur</a></li>
								<li><a href="/">Lalitpur</a></li>
							</ul>
						</div>
					</div>
					<div class="col-lg-3 col-md-6 col-sm-6">
						<div class="second-row-item-app">
							<h4>@localizer["Download App"]</h4>
							<ul>
								<li><a href="#"><img class="download-btn" src="images/download-1.svg" alt=""></a></li>
								<li><a href="#"><img class="download-btn" src="images/download-2.svg" alt=""></a></li>
							</ul>
						</div>
						<div class="second-row-item-payment">
							<h4>@localizer["Payment Method"]</h4>
							<div class="footer-payments">
								<ul id="paypal-gateway" class="financial-institutes">
									<li class="financial-institutes__logo">
									  <img alt="Visa" title="Visa" src="images/footer-icons/pyicon-6.svg">
									</li>
									<li class="financial-institutes__logo">
									  <img alt="Visa" title="Visa" src="images/footer-icons/pyicon-1.svg">
									</li>
									<li class="financial-institutes__logo">
									  <img alt="MasterCard" title="MasterCard" src="images/footer-icons/pyicon-2.svg">
									</li>
									<li class="financial-institutes__logo">
									  <img alt="American Express" title="American Express" src="images/footer-icons/pyicon-3.svg">
									</li>
									<li class="financial-institutes__logo">
									  <img alt="Discover" title="Discover" src="images/footer-icons/pyicon-4.svg">
									</li>
								</ul>
							</div>
						</div>
						<div class="second-row-item-payment">
							<h4>@localizer["Newsletter"]</h4>
							<div class="newsletter-input">
								<input id="email" name="email" type="text" placeholder="Email Address" class="form-control input-md" required="">
								<button class="newsletter-btn hover-btn" type="submit"><i class="uil uil-telegram-alt"></i></button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="footer-last-row">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="footer-bottom-links">
							<ul>
								<li><a href="/aboutus">@localizer["About"]</a></li>
								<li><a href="/contactus">@localizer["Contact Us"]</a></li>
								<li><a href="/">@localizer["Privacy Policy"]</a></li>
								<li><a href="/">@localizer["Term & Conditions"]</a></li>
								<li><a href="/">@localizer["Refund  Return Policy"]</a></li>
							</ul>
						</div>
						<div class="copyright-text">
							<i class="uil uil-copyright"></i>Copyright 2021 <b>@localizer["GroceryMart"]</b> . All rights reserved
						</div>
					</div>
				</div>
			</div>
		</div>
	</footer>
	@code{
	string newpro = "New Product";
	string feature = "Featured Product";
	string category = "Category";
	int AreaId = 0;
	IList<Category> listCategory = new List<Category>();
	protected async override void OnInitialized()
	{
		listCategory = await _category.GetAll();
		StateHasChanged();
	}
}
